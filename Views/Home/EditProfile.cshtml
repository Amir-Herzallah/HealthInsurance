@model HealthInsurance.Models.Users

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "_Layout";
}

@if (TempData.ContainsKey("EditSuccess"))
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["EditSuccess"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <h1 class="display-6 mb-5 text-center mt-5">
                    Edit Your Profile
                </h1>
                <form method="post" asp-action="EditProfile" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Username"
                                       type="text"
                                       class="form-control"
                                       id="name"
                                       placeholder="Your Name" />
                                <label for="name">Your Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Password"
                                       type="password"
                                       class="form-control"
                                       id="password"
                                       placeholder="Your Password" />
                                <label for="password">Your Password</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Email"
                                       type="email"
                                       class="form-control"
                                       id="email"
                                       placeholder="Your Email" />
                                <label for="email">Your Email</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="PhoneNumber"
                                       type="tel"
                                       class="form-control"
                                       id="phonenumber"
                                       placeholder="Your New Phone Number" />
                                <label for="phonenumber">Your Phone Number</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating" hidden>
                                <input asp-for="RegistrationDate"
                                       type="date"
                                       class="form-control"
                                       id="Registration Date"
                                       placeholder="Your Registration Date" />
                                <label for="Registration Date">Your Registration Date</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating" hidden>
                                <input asp-for="Roleid"
                                       type="text"
                                       class="form-control"
                                       id="RoleId"
                                       placeholder="Your Role Id" />
                                <label for="RoleId">Your Role Id</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="ProfilePictureFile"
                                       type="file"
                                       class="form-control"
                                       id="ProfilePictureFile"
                                       placeholder="Your Profile Picture File" />
                                <label for="ProfilePictureFile">Your Profile Picture</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating text-center">
                                <img src="@Url.Content("~/images/" + Model.ProfilePictureUrl )" asp-append-version="true" width="100" height="100" />
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary py-3 px-5" type="submit">
                                Edit Profile
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-5 wow fadeIn" style="margin-left:auto">
                    <img s
                         src="~/images/Picture1EDITPROF.png"
                         frameborder="0"
                         style="border: 0; height:500px; width:500px"
                         allowfullscreen=""
                         aria-hidden="false"
                         tabindex="0">
            </div>
        </div>
    </div>
</div>
