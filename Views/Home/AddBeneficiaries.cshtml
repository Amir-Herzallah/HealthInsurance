@model HealthInsurance.Models.Beneficiaries
@{
    Layout = "_Layout";
}
@if (TempData.ContainsKey("BeneSuccess"))
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["BeneSuccess"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<body>
    <!-- Appointment Start -->

    <div class="container-fluid p-5 wow fadeIn bg-light rounded ps-2" data-wow-delay="0.1s">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-4 col-md-6 offset-2 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="service-item rounded h-100 p-5 ">
                        <div class="d-flex align-items-center ms-n5 mb-4">
                            <div class="service-icon flex-shrink-0 bg-primary rounded-end me-4">
                                <img class="img-fluid"
                                     src="~/HomeAssets/img/icon/icon-10-light.png"
                                     alt="" />
                            </div>
                            <h4 class="mb-0">Healthcare Beneficiaries</h4>
                        </div>
                        <p class="mb-4" style="margin-top: 2.5rem !important;">
                            Beneficiaries in healthcare enjoy cost-effective access to essential medical services, including doctor visits, hospital care, and prescriptions. This coverage provides financial security, ensuring individuals can maintain their health and well-being without the burden of high healthcare expenses.
                        </p>

                    </div>
                </div>
                <dv class="col-lg-4 wow fadeIn service-item rounded h-100 p-3 text-center" data-wow-delay="0.5s">
                    <div class="bg-light rounded p-5">
                        <h2 class="display-6 mb-2 ">
                            Request to add Beneficiaries
                        </h2>
                    </div>

                    <form method="post" asp-action="AddBeneficiaries" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden field for Subscription ID -->
                        <div class="form-group hidden">
                            <input asp-for="Subscriptionid" type="hidden" id="Subscriptionid" value="YourSubscriptionIdHere" />
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Your Name" required />
                                    <label for="name">Beneficiary Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DateOfBirth" type="date" class="form-control" id="DateOfBirth" placeholder="DateOfBirth" required />
                                    <label for="DateOfBirth">Beneficiary Date of Birth</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Gender" type="text" class="form-control" id="Gender" placeholder="Beneficiary Gender" required />
                                    <label for="Gender">Beneficiary Gender</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="RelationshipToSubscriber" type="text" class="form-control" id="RelationshipToSubscriber" placeholder="Relationship to Subscriber" required />
                                    <label for="RelationshipToSubscriber">Relationship to Subscriber</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="BeneficiaryImageFile" type="file" class="form-control required" id="BeneficiaryImageFile" placeholder="Beneficiary Picture" required />
                                    <label for="BeneficiaryImageFile">Beneficiary Picture</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-center mt-4 mb-4">
                            <button class="btn btn-primary py-3 px-5" type="submit">
                                Add Beneficiary
                            </button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Initialize Bootstrap JavaScript components
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="popover"]').popover();
            $('.alert-dismissible .close').on('click', function () {
                $(this).closest('.alert-dismissible').fadeOut();
            });
        });
    </script>
</body>
<script>
    $(document).ready(function () {
        // Initialize Bootstrap JavaScript components
        $('[data-toggle="tooltip"]').tooltip();
        $('[data-toggle="popover"]').popover();
        $('.alert-dismissible .close').on('click', function () {
            $(this).closest('.alert-dismissible').fadeOut();
        });
    });
</script>