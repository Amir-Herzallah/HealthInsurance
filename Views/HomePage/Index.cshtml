@model IEnumerable<HealthInsurance.Models.HomePage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LogoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaderComponent1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaderComponent2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FooterComponent1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FooterComponent2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LogoPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeaderComponent1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeaderComponent2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FooterComponent1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FooterComponent2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
