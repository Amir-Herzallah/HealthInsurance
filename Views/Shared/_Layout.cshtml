@using HealthInsurance.Controllers

@{
    // Retrieve the shared data from ViewData
    var homePageData = ViewData["HomePageData"] as IEnumerable<HomePage>;
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Insure - Insurance HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Poppins:wght@600;700&display=swap"
          rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
          rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/HomeAssets/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/HomeAssets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/HomeAssets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/HomeAssets/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Topbar Start -->
        <div class="container-fluid bg-dark text-white-50 py-2 px-0 d-none d-lg-block">
            <div class="row gx-0 align-items-center">
                <div class="col-lg-7 px-5 text-start">
                    <div class="h-100 d-inline-flex align-items-center me-4">
                        <small class="fa fa-phone-alt me-2"></small>
                        <small>+962 77 5540 697</small>
                    </div>
                    <div class="h-100 d-inline-flex align-items-center me-4">
                        <small class="far fa-envelope-open me-2"></small>
                        <small>insure@gmail.com</small>
                    </div>
                    <div class="h-100 d-inline-flex align-items-center me-4">
                        <small class="far fa-clock me-2"></small>
                        <small>Mon - Fri : 09 AM - 09 PM</small>
                    </div>
                </div>
                <div class="col-lg-5 px-5 text-end">
                    <div class="h-100 d-inline-flex align-items-center">
                        <a class="text-white-50 ms-4" href="https://github.com/Amir-Herzallah">
                            <i class="fab fa-github"></i>
                        </a>
                        <a class="text-white-50 ms-4" href="https://www.linkedin.com/in/amir-herzalla/">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-white-50 ms-4" href="https://www.facebook.com/amir.herzallah">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-white-50 ms-4" href="https://www.instagram.com/amir_herzallah/">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Topbar End -->

        <!-- Navbar Start -->
        @foreach (var item in homePageData)
        {
            <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5">
                <a href="/Home/Index" class="navbar-brand d-flex align-items-center">
                    <h1 class="m-0">
                        <img class="img-fluid me-3"
                             src="@item.LogoPath"
                             alt="" />@item.HeaderComponent1
                    </h1>
                </a>
                <button type="button"
                        class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto bg-light rounded pe-4 py-3 py-lg-0">
                        <a href="/Home/Index" class="nav-item nav-link">Home</a>
                        <a href="/AboutUs/Index" class="nav-item nav-link">About Us</a>
                        <a href="/Testimonials/Index" class="nav-item nav-link">Testimonials</a>
                        <a href="/ContactUs/Index" class="nav-item nav-link">Contact Us</a>
                    </div>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item dropdown">
                        <a href="#"
                           class="nav-item dropdown-toggle btn btn-primary px-3 d-none d-lg-block me-2"
                           data-bs-toggle="dropdown">@item.HeaderComponent2</a>
                        <div class="dropdown-menu bg-light border-0 m-0">
                            <a href="/Home/EditProfile/@ViewBag.id" class="btn btn-primary px-3 d-none d-lg-block m-2">Edit Profile</a>
                            <a href="/Home/Subscriptions/@ViewBag.id" class="btn btn-primary px-3 d-none d-lg-block m-2">Subscribe</a>
                            <a href="/Home/AddBeneficiaries/@ViewBag.id" class="btn btn-primary px-3 d-none d-lg-block m-2">Add Beneficiaries</a>
                            <a href="/Home/AddTestimonials/@ViewBag.id" class="btn btn-primary px-3 d-none d-lg-block m-2">Add a Testimonial</a>
                            <a href="/Auth/Logout" class="btn btn-primary px-3 d-none d-lg-block m-2">Logout</a>
                        </div>
                    </div>

                }
                else
                {
                    <a href="/Auth/Register" class="btn btn-primary px-3 d-none d-lg-block">Create an Account</a>
                }

            </nav>
            <!-- Navbar End -->
        }
    </header>
    @RenderBody()

    <!-- Footer Start -->
    @foreach (var item in homePageData)
    {
        <div class="container-fluid bg-dark footer mt-5 pt-5 wow fadeIn "
             data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h1 class="text-white mb-4">
                            <img class="img-fluid me-3"
                                 src="~/HomeAssets/img/icon/icon-02-light.png"
                                 alt="" />@item.FooterComponent1
                        </h1>
                        <p>
                            Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat
                            ipsum et lorem et sit, sed stet lorem sit clita
                        </p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-square me-1" href="">
                                <i class="fab fa-github" href="https://github.com/Amir-Herzallah"></i>
                            </a>
                            <a class="btn btn-square me-0" href="https://www.linkedin.com/in/amir-herzalla/">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a class="btn btn-square me-1" href="https://www.facebook.com/amir.herzallah">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-square me-1" href="https://www.instagram.com/amir_herzallah/">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-light mb-4">Address</h5>
                        <p>
                            <i class="fa fa-map-marker-alt me-3"></i>Amman, Jordan
                        </p>
                        <p><i class="fa fa-phone-alt me-3"></i>@item.FooterComponent2</p>
                        <p><i class="fa fa-envelope me-3"></i>amirherzalla8@gmail.com</p>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-light mb-4">Quick Links</h5>
                        <a class="btn btn-link" href="/AboutUs/Index">About Us</a>
                        <a class="btn btn-link" href="/ContactUs/Index">Contact Us</a>
                        <a class="btn btn-link" href="/Testimonials/Index">Testimonials</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-light mb-4">Sign Up</h5>
                        <p>You can create an account to get all insurance benefits!</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <button type="button"
                                    class="btn btn-secondary py-2 top-0 end-0 mt-2 me-2">
                                <a href="/Auth/Register">SignUp</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a href="/Home/Index">Insure</a>, All Right Reserved.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            Made By <a href="https://github.com/Amir-Herzallah">Amir Herzalla</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/HomeAssets/lib/wow/wow.min.js"></script>
    <script src="~/HomeAssets/lib/easing/easing.min.js"></script>
    <script src="~/HomeAssets/lib/waypoints/waypoints.min.js"></script>
    <script src="~/HomeAssets/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/HomeAssets/lib/counterup/counterup.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/HomeAssets/js/main.js"></script>
</body>
</html>
