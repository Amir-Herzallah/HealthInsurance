@model IEnumerable<HealthInsurance.Models.Beneficiaries>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}
<div class="row justify-content-center mt-3">
    <div class="col-10">
        <table class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Beneficiary Name
                    </th>
                    <th>
                        Date of Birth
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        Relationship to Subscriber
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        Beneficiary Image 
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BeneficiaryCreationDate)
                    </th>
                    <th>
                        Subscription Id
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Status == "Accepted")
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RelationshipToSubscriber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <img src="@Url.Content("~/images/" + item.BeneficiaryImagePath )" asp-append-version="true" width="100" height="100" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryCreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subscription.Id)
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>
</div>